{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lightwatch.dev/schemas/heartbeat_event/v2",
  "title": "Lightwatch Heartbeat Event",
  "description": "Schema for service heartbeat ingestion. v2 adds event_id, trace_id, schema_version, and status field.",
  "type": "object",
  "required": ["service"],
  "properties": {
    "event_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64,
      "description": "Client-supplied unique event identifier. Generated server-side if omitted."
    },
    "trace_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64,
      "description": "Distributed trace identifier."
    },
    "schema_version": {
      "type": "integer",
      "minimum": 1,
      "default": 2,
      "description": "Schema version number."
    },
    "service": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "description": "Source service name."
    },
    "host": {
      "type": "string",
      "maxLength": 256,
      "description": "Hostname or IP of the reporting instance."
    },
    "status": {
      "type": "string",
      "enum": ["healthy", "degraded", "unhealthy"],
      "description": "Self-reported service health status."
    },
    "version": {
      "type": "string",
      "maxLength": 64,
      "description": "Application version string."
    },
    "meta": {
      "type": "object",
      "description": "Arbitrary metadata (uptime, memory, etc.).",
      "additionalProperties": true
    },
    "tags": {
      "type": "object",
      "additionalProperties": { "type": "string" },
      "description": "Indexed key-value tags."
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Event timestamp (ISO 8601). Defaults to server time if omitted."
    }
  },
  "additionalProperties": false
}
